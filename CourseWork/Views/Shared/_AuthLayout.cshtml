@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en" style="font-size: 18px;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CourseWork</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/light-mode.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
</head>
<body style="margin-bottom: 0px;">
    <header style="background-color: #FFA500;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/images/icon.jpg" height="50" width="50" style="border-radius: 5px" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="btn btn-dark" asp-action="Personal" asp-controller="Account" asp-route-userName="@User.Identity.Name">Личный кабинет</a>
                            </li>
                            <li class="nav-item ml-1 mr-1">
                                <a class="btn btn-dark" asp-action="Logout" asp-controller="Account">Выйти</a>
                            </li>
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="btn btn-dark" asp-controller="Admin" asp-action="UserList">Админ панель</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item mr-2">
                                <a class="btn btn-dark" asp-area="" asp-controller="Account" asp-action="Login">Войти</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-dark" asp-area="" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
                            </li>
                        }
                    </ul>
                    <form class="form-inline mr-4 mt-2 mt-md-0" asp-controller="Home" asp-action="Search" method="get">
                        <input class="form-control mr-sm-3" type="search" name="query" placeholder="Введите запрос" aria-label="Search">
                        <button class="btn btn-dark my-2 my-sm-0" type="submit">Найти рецепты</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div style="background: left url(/images/left.jpg),
                            right url(/images/right.jpg); background-size:25% 50%; background-repeat: no-repeat; min-height: 80vh; background-color: #FFD773;">
            @RenderBody()
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    <footer style="background: url(/images/footer.jpg); height: 110px;">
    </footer>
</body>
</html>
